{
  "name": "backend",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "server.js",

  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test jest",
    "test:html": "NODE_ENV=test jest --coverage"
  },

  "jest": {
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "Admin Portal API Test Report",
          "outputPath": "./test-report.html",
          "includeFailureMsg": true,
          "includeConsoleLog": true
        }
      ]
    ]
  },

  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "excel4node": "^1.8.2",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.2.0",
    "morgan": "^1.10.1",
    "pdfkit": "^0.17.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "supertest": "^7.2.2"
  }
}
